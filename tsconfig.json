{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom",
      "esnext.asynciterable"
    ],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@components/*": [
        "app/components/*"
      ],
      "@pages/*": [
        "app/pages/*"
      ],
      "@interfaces/*": [
        "interface/*"
      ],
      "@environments/*": [
        "environments/*"
      ],
      "@services/*": [
        "service/*"
      ]
    },
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "debug": true,
    "enableI18nLegacyMessageIdFormat": false
  }
}
